# Prioritized items
[Prioritized]
title = Prioritized
filterexpr = due:>yesterday (>=Z)
sortexpr = desc:priority,asc:due
show_all = 0

# Unprioritized items
[Unprioritized]
title = Unprioritized
filterexpr = due:>yesterday (<Z)
sortexpr = desc:priority,asc:due
show_all = 1

# Overdue items
[Overdue]
title = Overdue
filterexpr = due:<today (<Z)
sortexpr = desc:priority,asc:due
show_all = 1

# Items that are never due
[Neverdue]
title = Neverdue
filterexpr = -due
show_all = 1

# Items that are below their starting threshold
[Below Threshold]
title = Below Threshold
filterexpr = t:>today
sortexpr = asc:due
show_all = 1

